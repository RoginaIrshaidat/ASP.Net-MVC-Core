@model IEnumerable<hospital.Models.Doctor>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocName)
            </td>
            <td>
                <img src="~/images/@item.DocImg" style="height:50px; width:50px;">
@*                @Html.DisplayFor(modelItem => item.DocImg)
*@            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clinc.ClincName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DocId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DocId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DocId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
