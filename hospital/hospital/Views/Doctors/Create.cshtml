@model hospital.Models.Doctor



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DocName" class="control-label">Doctor Name</label>
                <input asp-for="DocName" class="form-control" />
                <span asp-validation-for="DocName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClincId" class="control-label"> Clinic Name</label>
                <select asp-for="ClincId" class ="form-control" asp-items="ViewBag.ClincId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DocImg" class="control-label"> Doctor Image</label>
                <input asp-for="DocImg" class="form-control" type="file" accept=".png,.jpg,.gif" />
                <span asp-validation-for="DocImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
